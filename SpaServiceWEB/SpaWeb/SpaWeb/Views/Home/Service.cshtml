@model IEnumerable<SpaWeb.Models.SpaService>

@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div id="customer" class="customer">
    <div class="container-fluid">
        <div class="row">
            @foreach (var spa in Model)
            {
                if (ViewBag.idspa == spa.SpaID)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="my-list" style="height:50rem">
                            <img src="~/ImageSpa/@spa.Image" alt="@spa.Service.Description" style="height:35rem;width:100%" />
                            <h1 class="vnamespa">@spa.Service.Description</h1>
                            @{
                                Double t = Convert.ToDouble(spa.Price);
                                string money = string.Format("{0:#,##0.00}", t);
                            }
                            <span class="Website">Price:<a>@money Đồng</a></span>
                            <div class="detail" style="background-color:aliceblue">
                                <h1 class="vnamespa">@spa.Service.ServiceType1.Description </h1>
                                <img src="/ImageSpa/@spa.Service.Image" style="height:20rem;width:70%;" />
                                <table style="margin-left:2%" width="98%">

                                    <tr>
                                        <th class="color">Discount Percent: @spa.DiscountPercent%</th>
                                    </tr>
                                    <tr>
                                        <th class="color">Response: @spa.Response</th>
                                    </tr>
                                    <tr>
                                        @{
                                            Double ti = Convert.ToDouble(@spa.DiscountMoney);
                                            string moneye = string.Format("{0:#,##0.00}", t);
                                        }
                                        <th class="color"> Discount Money:@moneye Đồng</th>
                                    </tr>
                                    <tr>
                                        <th class="color"> @spa.Description</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>

