@model IEnumerable<SpaWeb.Models.Service>
@{
    ViewBag.Title = "Manage Service";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="breadcome-heading">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Home</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Dashboard V.1</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="analytics-sparkle-area">
    <div class="container-fluid">
        <h2>Services</h2>
        <div id="toolbar">
            <a href="/Services/Create" class="btn btn-primary shadow sharp me-1 fas">Create Service</a>
        </div>
        <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
               data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceType1.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <img src="/ImageSpa/@item.Image" height="80" width="150" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceType1.Description)
                        </td>
                        <td>
                            <a href="/Services/Edit/@item.ServiceID" class="btn btn-warning shadow sharp me-1 fas ">Edit Service</a>
                            <a href="/Services/Details/@item.ServiceID" class="btn btn-primary shadow sharp me-1 fas">Details Service</a>
                            <a href="/Services/Delete/@item.ServiceID" class="btn btn-danger shadow sharp me-1 fas">Delete Service</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>